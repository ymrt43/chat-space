.SideBar
  .SideBar__userName
    .TopItems
      .TopItems__name
        = current_user.name
      .TopItems__icons
        = link_to new_group_path, class: "TopItems__btn" do
          = icon('far', 'edit', class: "TopItems__btn--icon")
          %span<>
        = link_to edit_user_path(current_user), class: "TopItems__btn" do
          = icon('fas', 'cog', class: "TopItems__btn--icon")
          %span<>
  .SideBar__groupList
    - current_user.groups.each do |group|
      .GroupList
        = link_to group_messages_path(group), class: "GroupList" do
          .GroupList__name
            = group.name
          .GroupList__message
